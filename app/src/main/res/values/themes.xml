<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Aster" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <!-- Customize your theme here. -->
        <!-- text color. -->
        <item name="android:textColor">@color/black</item>
        <!-- background color. -->
        <item name="android:background">@color/white</item>
        <!-- drawable background color. -->
        <item name="android:buttonTint">@color/black</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored" tools:ignore="NewApi">
        <item name="colorButtonNormal">@color/black</item>
        <item name="android:colorButtonNormal">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>












</resources>
